<div class="form-row">
    <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" value="<%= character.name %>">
    </div>
    <div class="form-item">
        <label>Surname</label>
        <input type="text" name="surname" value="<%= character.surname %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Age</label>
        <input type="number" name="age" value="<%= character.age %>">
    </div>
    <div class="form-item">
        <label>Anime</label>
        <select name="anime">
            <option disabled selected>Select The Anime</option>
            <% animes.forEach(anime => { %>
                <% if (character.anime != null && character.anime !== '') { %>
                    <% if (anime.id === character.anime.toString()) { %>
                        <option selected label="<%= anime.title %>" value="<%= anime.id %>"></option>
                    <% } %>
                <% } else { %>
                    <option label="<%= anime.title %>" value="<%= anime.id %>"></option>
                <% } %>
            <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Image</label>
        <input type="file" name="image" class="filepond">
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= character.description %></textarea>
    </div>
</div>
