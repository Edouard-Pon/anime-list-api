<h2>Search Character</h2>
<form action="/characters" method="get">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>
<br>
<% characters.forEach(character => { %>
    <a href="/characters/<%= character.id %>"><div><%= character.name %> <%= character.surname %></div></a>
    <div><a href="/characters/<%= character.id %>"><img width="100" height="150" src="<%= character.imagePath %>"></a></div>
<% }) %>
