<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= anime.title %>">
</div>
<div>
    <label>Episodes</label>
    <input type="number" name="episodesCount" min="1" value="<%= anime.episodesCount %>">
</div>
<div>
    <label>Status</label>
    <select name="status">
        <option label="Out" value="Out"></option>
        <option label="Ongoing" value="Ongoing"></option>
        <option label="Announced" value="Announced"></option>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate"
           value="<%= anime.publishDate == null ? '' : anime.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Created At</label>
    <input type="date" name="createdAt"
           value="<%= anime.createdAt == null ? '' : anime.createdAt.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Source</label>
    <input type="text" name="source" value="<%= anime.source %>">
</div>
<div>
    <label>Link</label>
    <input type="text" name="link" value="<%= anime.externalLink %>">
</div>
<div>
    <label>Character</label>
    <select name="character">
        <option></option>
        <% characters.forEach(character => { %>
            <% if (character.id === anime.character) { %>
                <option selected label="<%= character.name %>" value="<%= character.id %>"></option>
            <% } else { %>
                <option label="<%= character.name %>" value="<%= character.id %>"></option>
            <% } %>
        <% }) %>
    </select>
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= anime.description %></textarea>
</div>
